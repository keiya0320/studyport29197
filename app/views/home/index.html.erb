<h1>トップページ</h1>

<% if user_signed_in?%>
  <%= current_user.nickname + "さん" %><br>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn" %>
<% else %>
  <h2>ログインしていません</h2>
  <%= link_to "新規登録", new_user_registration_path, class: "btn" %>
  <%= link_to "ログイン", new_user_session_path, class: "btn" %>
<% end %>

<div class="header">
  <div class="inner-header">
    <h1 class="title">
     Posts
    </h1>
    <li class='new-post'>
      <%= link_to "New Post", new_post_path, class:"post-btn"%>
    </li>
  </div>
</div>

<div class="main">
  <div class="message-wrap">
    <% @posts.each do |post| %>
      <div class="message">
        <p class="title">
          <%= post.title %>
        </p>
        <p class="text">
          <%= post.message %>
        </p>
        <ul class="tag">
          <li class="tag-list">
            <%post.tags.each do |tag| %>
              <%=tag.name%>
            <%end%>
          </li>
        </ul>
      </div>
    <%end%>
  </div>
</div>
