<%= form_with model: @post, url: posts_path, class:'form-wrap', local: true do |f| %>
  <div class='message-form'>
    <div class="title-field">
      <%= f.label :title,  "タイトル" %>
      <%= f.text_field :title, class:"input-title" %>
    </div>
    <div class="message-field">
      <%= f.label :message,  "つぶやき" %>
      <%= f.text_area :message, class:"input-message" %>
    </div>
    <div class="tag-field", id='tag-field'>
      <%= f.label :name, "タグ" %>
      <%= f.text_field :name, class:"input-tag" %>
    </div>
    <div id="search-result">
    </div>
  </div>
  <div class="submit-post">
    <%= f.submit "Send", class: "submit-btn" %>
  </div>
<% end %>